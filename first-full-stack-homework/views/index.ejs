<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title></title>
  <style>
      li {font-family: roboto;}
  </style>
</head>

<body>
  <h1>Food Index Page</h1>

  <% for (let i = 0; i < food.length; i++ ) { %>
      <ul>
      The <a href="/food/<%=food.index%>"> <%=food[i].name; %></a> is <%=food[i].cuisine; %>
        <!-- <%=  food[i].name %> <br/>
        <%=     food[i].cuisine %> <br/>
        <%=     food[i].calories %> <br/> -->
      <%  if (food[i].hot === true) { %>
          Hot
      <%  } else { %>
          Cold
      <%  } %>
      <form action="/food/<%=food[i].index%>?_method=DELETE" method="POST">
        <input type="submit" value="delete">
      </form>

      <a href="/food/<%=food[i].index%>/edit"> Edit <%=food[i].name%></a>
      </ul>
  <% } %>

    <nav>
<a href="/food/new">Add another Food Item </a>
    </nav>


  </body>
